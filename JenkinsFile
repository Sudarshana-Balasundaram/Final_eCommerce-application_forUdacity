pipeline {
  agent any
  environment {
    JAVA_HOME = tool 'Java 11'
    MAVEN_HOME = tool 'Maven'
  }
  stages {
    stage('Build') {
      steps {
        node {
          sh 'mvn clean package -DskipTests'
        }
      }
    }
    stage('Test') {
      steps {
        node {
          sh 'mvn test'
        }
      }
    }
  }
  post {
    always {
      junit 'target/surefire-reports/*.xml'
    }
  }
}